# Rediacc CLI Configuration
# Copy this file to .env and update with your values

# API Configuration
SYSTEM_HTTP_PORT=7322
REDIACC_API_URL=http://localhost:7322/api

# Docker Configuration
REDIACC_LINUX_USER=rediacc
REDIACC_LINUX_GROUP=rediacc
REDIACC_USER_UID=7111
REDIACC_USER_GID=7111

# CLI Configuration
# REDIACC_CONFIG_DIR=~/.rediacc  # Optional: Override config directory (defaults to .rediacc in CLI folder)
REDIACC_TEST_ACTIVATION_CODE=111111
REDIACC_DEFAULT_THEME=dark

# Windows Configuration (only needed on Windows)
REDIACC_TEMP_DIR=C:\Windows\Temp
REDIACC_MSYS2_ROOT=C:\msys64

# Optional: Override Python path for CLI tool
# REDIACC_PYTHON_PATH=/usr/bin/python3

# Windows Installation Configuration
# REDIACC_PYTHON_INSTALL_DIR=C:\Python313
# REDIACC_MSYS2_INSTALL_DIR=C:\msys64
# REDIACC_DOWNLOAD_DIR=C:\temp\rediacc-setup
# REDIACC_SKIP_PACKAGE_MANAGERS=false
# REDIACC_PREFERRED_PACKAGE_MANAGER=winget