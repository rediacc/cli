# Rediacc CLI Configuration
# Copy this file to .env and update with your values

# API Configuration
SYSTEM_HTTP_PORT=${SYSTEM_HTTP_PORT:-443}
REDIACC_API_URL=${REDIACC_API_URL:-https://www.rediacc.com/api}

# Docker Configuration
REDIACC_LINUX_USER=${REDIACC_LINUX_USER:-rediacc}
REDIACC_LINUX_GROUP=${REDIACC_LINUX_GROUP:-rediacc}
REDIACC_USER_UID=${REDIACC_USER_UID:-7111}
REDIACC_USER_GID=${REDIACC_USER_GID:-7111}

# CLI Configuration
# REDIACC_CONFIG_DIR=${REDIACC_CONFIG_DIR:-~/.rediacc}  # Optional: Override config directory (defaults to .rediacc in CLI folder)
REDIACC_TEST_ACTIVATION_CODE=${REDIACC_TEST_ACTIVATION_CODE:-111111}
REDIACC_DEFAULT_THEME=${REDIACC_DEFAULT_THEME:-dark}

# Windows Configuration (only needed on Windows)
REDIACC_TEMP_DIR=${REDIACC_TEMP_DIR:-C:\\Windows\\Temp}
REDIACC_MSYS2_ROOT=${REDIACC_MSYS2_ROOT:-C:\\msys64}

